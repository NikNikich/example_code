{
  "name": "base_api",
  "version": "0.0.1",
  "description": "Base project for backend services",
  "author": "Citronium (http://citronium.com)",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "engineStrict": true,
  "scripts": {
    "html": "copyfiles src/**/*.ejs dist/",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\" \"e2e/**/*.ts\"",
    "style": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\" \"e2e/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,config,test}/**/*.ts\" --fix --max-warnings 0",
    "test": "jest  --runInBand --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:unit": "jest --config ./jest-unit.json",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config e2e/jest-e2e.json"
  },
  "dependencies": {
    "@golevelup/nestjs-rabbitmq": "^2.2.0",
    "@nestjs/common": "7.0.0",
    "@nestjs/core": "7.0.0",
    "@nestjs/jwt": "7.1.0",
    "@nestjs/microservices": "7.4.4",
    "@nestjs/passport": "7.1.0",
    "@nestjs/platform-express": "7.0.0",
    "@nestjs/platform-socket.io": "7.6.17",
    "@nestjs/swagger": "3.1.0",
    "@nestjs/typeorm": "7.1.4",
    "@nestjs/websockets": "7.6.17",
    "@types/lodash": "4.14.168",
    "amqp-connection-manager": "3.2.0",
    "amqplib": "0.5.5",
    "async-redis": "1.1.7",
    "aws-sdk": "2.536.0",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.2.3",
    "class-validator": "0.11.0",
    "config": "3.2.4",
    "ejs": "3.1.3",
    "generate-password": "1.6.0",
    "html-pdf": "2.2.0",
    "influx": "^5.9.3",
    "lodash": "4.17.21",
    "moment": "2.24.0",
    "nest-influxdb": "^0.0.3",
    "nodemailer": "6.5.0",
    "passport": "0.4.0",
    "passport-jwt": "4.0.0",
    "pg": "8.4.1",
    "reflect-metadata": "0.1.13",
    "request": "2.88.0",
    "request-promise-native": "1.0.8",
    "rxjs": "6.5.4",
    "socket.io": "4.1.2",
    "socket.io-client": "4.1.2",
    "swagger-ui-express": "4.1.4",
    "ts-node": "9.0.0",
    "tsconfig-paths": "3.9.0",
    "typeorm": "0.2.28",
    "xlsx": "0.16.6"
  },
  "devDependencies": {
    "@nestjs/cli": "7.0.0",
    "@nestjs/schematics": "7.0.0",
    "@nestjs/testing": "7.0.0",
    "@types/config": "0.0.36",
    "@types/ejs": "3.0.4",
    "@types/express": "4.17.3",
    "@types/html-pdf": "2.2.0",
    "@types/jest": "26.0.10",
    "@types/moment": "2.13.0",
    "@types/node": "13.9.1",
    "@types/nodemailer": "6.4.0",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "copyfiles": "2.4.0",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-unused-imports": "0.1.3",
    "husky": "4.2.3",
    "jest": "26.4.2",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "rimraf": "3.0.2",
    "supertest": "4.0.2",
    "ts-jest": "26.2.0",
    "ts-loader": "6.2.1",
    "typescript": "3.9.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "verbose": true,
    "testEnvironment": "node",
    "testRegex": ".(spec).ts$",
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageDirectory": "./unit-coverage",
    "collectCoverageFrom": [
      "./src/**/*.{ts,js}",
      "!./dist",
      "!./test",
      "!./node_modules",
      "!./src/main.{ts,js}",
      "!./src/infrastructure/transport/notifications.transport.ts",
      "!./src/infrastructure/transport/sms.transport.ts",
      "!./src/infrastructure/server/app.ts",
      "!./src/infrastructure/presenter/rest-api/documentation/http.description.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "setupFiles": [],
    "reporters": [
      "default"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn format"
    }
  }
}
